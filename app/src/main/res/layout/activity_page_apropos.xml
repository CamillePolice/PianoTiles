<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/fenetreAPropos"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.i150787.pianotiles.MainActivity">

    <RelativeLayout
        android:layout_weight="0.15"
        android:id="@+id/rl4"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PianoTiles"
            android:textSize="50dp"
            android:paddingTop="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/titreAppli" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="0.5"
        android:id="@+id/rl3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/reglesJeu"
            android:text="Les règles du PianoTiles sont simples :\nvous avez 10, 30 ou bien 50 touches de pianos à toucher dans l'ordre. Votre score sera votre temps pour toutes les toucher."
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="200dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/dicton"
            android:text="Que le Force soit avec vous !"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="350dp" />


    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl1"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/yoda"
            android:id="@+id/yoda"
            android:layout_marginTop="475dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>
